extends app.pug 

block titulo
    title Lista de Clientes

block conteudo
    h1 Lista de clientes
    table.table 
        thead
            tr
                th(scope='col') ID
                th(scope='col') Nome
                th(scope='col') Email
                th(scope='col') Ações
        tbody
            for cliente in clients
                tr
                    th(scope='row') #{cliente.id}
                    td 
                        a(href=`/clients/${cliente.id}`) #{cliente.name}
                    td #{cliente.email}
                    td 
                        a(href=`/clients/${cliente.id}/edit`).btn.btn-primary Editar
                        form(action=`/clients/${cliente.id}?_method=DELETE` method="POST" style='display: inline')
                            button(type="submit" value="submit" onclick='return confirm("Tem certeza que deseja apagar?")').btn.btn-danger Excluir
    a(href="/clients/create").btn.btn-success Novo Cliente  
